@using CoffeeTunes.Contracts.Bars

<div class="voters-list">
    <h3 class="voters-title">ğŸ—³ï¸ Voters</h3>
    
    @if (JoinedHipsters.Any())
    {
        <div class="vote-count">
            @VotedHipsters.Count/@JoinedHipsters.Count
        </div>
        
        <div class="hipsters-list">
            @foreach (var hipster in JoinedHipsters)
            {
                var hasVoted = VotedHipsters.Any(v => v.Id == hipster.Id);
                <div class="hipster-item @(hasVoted ? "voted" : "")">
                    @if (hasVoted)
                    {
                        <span class="vote-checkmark">âœ“</span>
                    }
                    else
                    {
                        <span class="vote-pending">â—‹</span>
                    }
                    <span class="hipster-name">@hipster.Name</span>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-hipsters">
            <p>No hipsters have joined yet...</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public List<ContributingHipsterContract> JoinedHipsters { get; set; } = new();
    
    [Parameter]
    public List<ContributingHipsterContract> VotedHipsters { get; set; } = new();
}
