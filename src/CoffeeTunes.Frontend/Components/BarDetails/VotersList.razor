@using CoffeeTunes.Contracts
@using CoffeeTunes.Contracts.Bars

<div class="voters-list">
    <h3 class="voters-title">üó≥Ô∏è Voters</h3>
    
    @if (JoinedHipsters.Any())
    {
        <div class="vote-count">
            @VotedHipsterIds.Count/@JoinedHipsters.Count
        </div>
        
        <div class="hipsters-list">
            @foreach (var hipster in JoinedHipsters.OrderBy(h => h.Value))
            {
                var hasVoted = VotedHipsterIds.Contains(hipster.Key);
                <div class="hipster-item @(hasVoted ? "voted" : "")">
                    @if (hasVoted)
                    {
                        <span class="vote-checkmark">‚úì</span>
                    }
                    else
                    {
                        <span class="vote-pending">‚óã</span>
                    }
                    <span class="hipster-name">@hipster.Value</span>
                </div>
            }
        </div>
        
        <button 
            class="reveal-button" 
            @onclick="RevealResults"
            disabled="@(isRevealing || IsRevealed)">
            @if (isRevealing)
            {
                <span class="button-spinner">‚è≥</span>
                <span>Revealing...</span>
            }
            else if (IsRevealed)
            {
                <span>üîí</span>
                <span>Revealed</span>
            }
            else
            {
                <span>‚òï</span>
                <span>Reveal Results</span>
            }
        </button>
    }
    else
    {
        <div class="no-hipsters">
            <p>No hipsters have joined yet...</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public Dictionary<Guid, string> JoinedHipsters { get; set; } = new();
    
    [Parameter]
    public HashSet<Guid> VotedHipsterIds { get; set; } = new();
    
    [Parameter]
    public required Guid FranchiseId { get; set; }
    
    [Parameter]
    public required Guid BarId { get; set; }
    
    [Parameter]
    public bool IsRevealed { get; set; }
    
    [Inject]
    public ICoffeeTunesApi Api { get; set; } = default!;
    
    private bool isRevealing = false;
    
    private async Task RevealResults()
    {
        isRevealing = true;
        try
        {
            await Api.RevealIngredientResults(FranchiseId, BarId);
        }
        catch (Exception ex)
        {
            await Console.Error.WriteLineAsync($"Error revealing results: {ex.Message}");
        }
        finally
        {
            isRevealing = false;
        }
    }
}
